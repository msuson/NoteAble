<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/NavajoWhite"

    tools:context="suson.marco.noteable.MainActivity">

    <ImageView
        android:id="@+id/centerImage"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sound_hole"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_weight="80"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/string6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/strings_smaller"
                android:background="@null"
                android:padding="20dp"/>

            <ImageButton
                android:id="@+id/string5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/strings_smaller"
                android:background="@null"
                android:padding="20dp"/>

            <ImageButton
                android:id="@+id/string4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/strings_smaller"
                android:background="@null"
                android:padding="20dp"/>

            <ImageButton
                android:id="@+id/string3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/strings_smaller"
                android:background="@null"
                android:padding="20dp"/>

            <ImageButton
                android:id="@+id/string2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/strings_smaller"
                android:background="@null"
                android:padding="20dp"/>

            <ImageButton
                android:id="@+id/string1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/strings_smaller"
                android:background="@null"
                android:padding="20dp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_weight="20"
            android:layout_width="wrap_content"
            android:layout_height="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bridge"
                android:adjustViewBounds="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">

                <ImageButton
                    android:paddingTop="10dp"
                    android:id="@+id/prevButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/prev_icon"
                    android:scaleType="fitCenter"
                    android:background="@null"/>

                <ImageButton
                    android:paddingTop="2dp"
                    android:id="@+id/playButton"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/play_icon"
                    android:scaleType="fitCenter"
                    android:background="@null"/>

                <ImageButton
                    android:paddingTop="10dp"
                    android:id="@+id/nextButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/next_icon"
                    android:scaleType="fitCenter"
                    android:background="@null"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
